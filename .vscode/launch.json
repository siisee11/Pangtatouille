  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nest Framework",
      "envFile": "${workspaceRoot}/apps/backend/.env",
      "cwd": "${workspaceRoot}/apps/backend",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start:debug"],
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "internalConsole"
    }
  ]
}
